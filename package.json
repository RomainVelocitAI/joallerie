{
  "name": "joaillerie-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "node scripts/check-env.js && next build",
    "start": "next start -p 3001",
    "clean": "rimraf .next node_modules package-lock.json && npm install",
    "check-env": "node scripts/check-env.js",
    "lint": "next lint && eslint . --ext .ts,.tsx",
    "lint:fix": "next lint --fix && eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "test": "jest --config=jest.config.ts",
    "test:watch": "jest --watch --config=jest.config.ts",
    "test:coverage": "jest --coverage --config=jest.config.ts"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
